{
  "name": "express_typescript",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": "^18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./dist/bin/www",
    "start:dev": "NODE_ENV=dev nodemon --exec ts-node ./bin/www",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "morgan": "~1.9.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.17",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "./"
    ],
    "ext": "ts,json",
    "execMap": {
      "ts": "node --require ts-node/register"
    }
  }
}
